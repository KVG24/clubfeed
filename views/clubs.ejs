<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles.css" />
        <title>ClubFeed: Clubs</title>
    </head>
    <body>
        <h1 class="title">Clubs</h1>
        <h2 class="welcome-back-text">
            Welcome back <%= user.first_name + " " + user.last_name %>
        </h2>
        <a class="log-out-link" href="/log-out">Log Out</a>
        <button class="create-club-btn" onclick="toggleModal(createClubModal)">
            Create Club
        </button>
        <div class="create-club-modal" style="display: none">
            <form action="/create-club" method="post">
                <input
                    type="text"
                    name="clubName"
                    id="clubName"
                    placeholder="Club name"
                    required
                />
                <input
                    type="password"
                    name="clubPassword"
                    id="clubPassword"
                    placeholder="Club password"
                    required
                />
                <div class="cc-modal-btn-container">
                    <button
                        class="cc-btn-close"
                        onclick="toggleModal(createClubModal)"
                        type="button"
                    >
                        Close
                    </button>
                    <button class="cc-btn-create" type="submit">
                        Create club
                    </button>
                </div>
            </form>
        </div>
        <div class="clubs-container">
            <% if (clubs) { %> <% clubs.forEach(club => { %>
            <div class="club">
                <h3 class="club-name"><%= club.name %></h3>
                <p class="club-creator">
                    Created by: <%= club.creator.first_name %> <%=
                    club.creator.last_name %> (@<%= club.creator.username %>)
                </p>
                <div class="club-btn-container">
                    <a class="club-btn" href="/clubs/<%= club.club_id %>"
                        >View message wall</a
                    >
                    <button class="club-btn" type="button">Join</button>
                </div>
            </div>
            <% }) %> <% } %>
        </div>
    </body>
    <script defer>
        const createClubModal = document.querySelector(".create-club-modal");
        //const clubsContainer = document.querySelector(".clubs-container");
        function toggleModal(modal) {
            if (modal.style.display == "none") {
                modal.style.display = "flex";
                //clubsContainer.style.opacity = "0.1";
            } else {
                modal.style.display = "none";
                //clubsContainer.style.opacity = "1";
            }
        }
    </script>
</html>
