<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles.css" />
        <title>ClubFeed: Sign-Up</title>
    </head>
    <body>
        <h1>Log In</h1>
        <% if (errors) { %>
        <div class="errors">
            <ul>
                <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
                <%});%>
            </ul>
        </div>
        <% } %>
        <form action="/log-in" method="POST">
            <input
                id="username"
                name="username"
                placeholder="username"
                type="text"
            />
            <input
                id="password"
                name="password"
                type="password"
                placeholder="Password"
            />
            <button type="submit">Log In</button>
        </form>
    </body>
</html>
